<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="airdesklayout.FXMLDocumentController">
    <children>
      <HBox spacing="20.0">
         <children>
            <VBox>
               <children>
                  <Label text="Clients:" />
                  <TableView fx:id="clientsTable" prefHeight="274.0" prefWidth="296.0">
                    <columns>
                      <TableColumn prefWidth="75.0" text="C1" />
                      <TableColumn prefWidth="75.0" text="C2" />
                    </columns>
                  </TableView>
                  <Label fx:id="logLabel" text="Log:">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Label>
                  <TextArea fx:id="logTextArea" editable="false" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label text="Files:" />
                  <TableView fx:id="filesTable" prefHeight="274.0" prefWidth="550.0">
                    <columns>
                      <TableColumn prefWidth="75.0" text="C1" />
                      <TableColumn prefWidth="75.0" text="C2" />
                    </columns>
                  </TableView>
                  <Button fx:id="downloadBtn" alignment="CENTER" mnemonicParsing="false" text="Download">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Button>
                  <Label text="Drag your file here:">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Label>
                  <StackPane fx:id="drangAndDropPane" prefHeight="150.0" prefWidth="200.0" style="-fx-border-color: lightgray;">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </StackPane>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
    </children>
</AnchorPane>
